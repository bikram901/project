
@{
    ViewData["Title"] = "Login";
}

<html>

    <head>
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

        <!-- Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <script src="~/lib/jquery/dist/User_Login.js"></script>
	    @* <script src="d:\aspnet_mvc\crud_operation\crud_operation\wwwroot\lib\jquery\dist\javascript.js"></script>  *@
    </head>
    <body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title" style="text-align:center">Login</h3>
                    </div>

                    <div class="row">

                        <div class="col-md-1"></div>

                        <div class="col-md-10">
                            <div class="form-group">
                                <p>
                                    <b>
                                        UserName<a style="color:red">*</a>
                                    </b>
                                </p>
                                <div class="form-line">
                                    <input type="text" id="username" name="UserName" class="form-control" value="" placeholder="UserName" />
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-10">

                            <div class="form-group">
                                <p>
                                    <b>
                                        Password<a style="color:red">*</a>
                                    </b>
                                </p>
                                <div class="form-line">
                                    <input type="text" id="password" name="PassWord" class="form-control" value="" placeholder="PassWord" />
                                </div>
                            </div>

                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="row">
                        <div class="col-md-4">
                            <button type="button" style="width:72px;margin-left:23%;margin-bottom:10%" class="btn btn-primary form-control" id="btnlog" value="SAVE"> LOGIN</button>
                        </div>
                        <div class="col-md-4">
                            <button type="button" style="width:81px;margin-left:-3%;margin-bottom:10%" class="btn btn-warning form-control" onclick="BtnRefrsh()" id="ref" value="SAVE"> REFRSH</button>
                        </div>
                        <div class="col-md-4">
                            <a class="btn btn-dark float-end w-auto text-center" href="https://localhost:7227/">New Registration</a>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>


    </body>


</html>

